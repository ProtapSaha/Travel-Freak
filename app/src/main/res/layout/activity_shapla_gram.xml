<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Shapla_gram">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="শাপলা গ্রাম"
                android:textColor="#000000"
                android:layout_gravity="center"
                android:textSize="24sp"
                android:layout_marginBottom="40dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <ImageView
                    android:layout_marginRight="2dp"
                    android:layout_width="110dp"
                    android:layout_height="100dp"
                    android:src="@drawable/shapla1"/>
                <ImageView
                    android:layout_marginRight="2dp"
                    android:layout_width="110dp"
                    android:layout_height="100dp"
                    android:src="@drawable/shapla2"/>
                <ImageView
                    android:layout_width="110dp"
                    android:layout_height="100dp"
                    android:src="@drawable/shapla3"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <ImageView
                    android:layout_marginRight="2dp"
                    android:layout_width="110dp"
                    android:layout_height="100dp" />
                <ImageView
                    android:layout_marginRight="2dp"
                    android:layout_width="110dp"
                    android:layout_height="100dp" />
                <ImageView
                    android:layout_width="110dp"
                    android:layout_height="100dp" />
            </LinearLayout>
            <TextView
                android:layout_marginTop="25dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/shapla_gram"
                android:textColor="#000000"
                android:textSize="20sp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                >
                <Button
                    android:id="@+id/back"
                    android:text="Back"
                    android:drawableLeft="@drawable/back"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:textColor="#FFFFFF"
                    android:layout_width="120dp"
                    android:layout_height="70dp"
                    android:background="@drawable/buttonshape"
                    android:shadowColor="#A8A8A8"
                    />
                <Button
                    android:id="@+id/dashboard"
                    android:text="Dashboard"
                    android:drawableLeft="@drawable/dashboard"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:layout_gravity=""
                    android:textColor="#FFFFFF"
                    android:layout_width="120dp"
                    android:layout_height="70dp"
                    android:background="@drawable/buttonshape"
                    android:shadowColor="#A8A8A8"
                    />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>